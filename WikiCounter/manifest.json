{
  "manifest_version": 2,

  "name": "Wikipedia hit counter",
  "description": "Counts your visits to wikipedia.",
  "version": "0.6",
    "author": "doofassi@gmail.com",

  "browser_action": {
    "default_icon": "wiki16.png",
    "default_popup": "wikicounter.html",
	"default_title": "WikiCounter"
  },

   "icons": { "16": "wiki16.png",
           "48": "wiki48.png"
  },
    "background": { 
    "scripts": ["wikicounterbg.js"],
	"persistent": false
  },
  "permissions": [
	"storage",
	"history"
	]
}